                </Grid.ColumnDefinitions>
                <Label Content="1" x:Name="erste" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="58" Width="43" FontSize="36" Margin="171,0,186,3"/>
